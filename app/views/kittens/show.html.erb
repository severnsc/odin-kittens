<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2><%= @kitten.name %></h2>
		<p><%= @kitten.age %></p>
		<p><%= @kitten.cuteness %></p>
		<p><%= @kitten.softness %></p>
		<p><%= link_to "Edit #{@kitten.name}", edit_kitten_path(@kitten) %>
		<p><%= link_to "Delete #{@kitten.name}", @kitten, method: :delete, data: { confirm: "Are you sure you want to delete #{@kitten.name}?" } %>
	</div>
</div>