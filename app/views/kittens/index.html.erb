<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>All Kittens</h2>
		<% @kittens.each do |kitten| %>
			<div class="kitten">
				<p><%= link_to kitten.name, kitten %></p>
				<p><%= kitten.age %></p>
				<p><%= kitten.cuteness %></p>
				<p><%= kitten.softness %></p>
				<p><%= link_to "Delete #{kitten.name}",
				kitten, method: :delete, data: { confirm: "Are you sure you want to delete #{kitten.name}?"} %>
			</div>
		<% end %>
	</div>
</div>